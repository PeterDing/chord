{
    "name": "chord",
    "version": "0.2.30",
    "description": "Chord - A Modern Music Player",
    "homepage": "https://github.com/PeterDing/chord",
    "main": "./out/main.js",
    "author": "Peter Ding <dfhayst@gmail.com>",
    "license": "MIT",
    "scripts": {
        "compile": "gulp compile",
        "test": "mocha --delay",
        "start": "ELECTRON_DEV=true electron ./out/main.js",
        "dist": "electron-builder --win --mac --linux deb",
        "dist:mac": "electron-builder --mac",
        "dist:win": "electron-builder --win",
        "dist:linux": "electron-builder --linux deb pacman AppImage rpm",
        "pack": "electron-builder --dir",
        "postinstall": "electron-rebuild -f -w better-sqlite3 && electron-rebuild -f -w big-integer"
    },
    "build": {
        "productName": "chord",
        "asar": false,
        "appId": "chord.music",
        "compression": "maximum",
        "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
        "electronVersion": "8.2.5",
        "linux": {
            "target": [
                "deb",
                "packman",
                "AppImage"
            ],
            "category": "Music",
            "executableName": "chord"
        },
        "deb": {
            "compression": "gz"
        },
        "win": {
            "target": "nsis"
        },
        "nsis": {
            "oneClick": false,
            "perMachine": true,
            "allowToChangeInstallationDirectory": true
        },
        "files": [
            "./out/**/*",
            "!**/*.ts",
            "!**/*.tsx"
        ]
    },
    "dependencies": {
        "better-sqlite3": "^5.4.3",
        "big-integer": "^1.6.48",
        "cheerio": "^1.0.0-rc.2",
        "crypto-js": "^3.3.0",
        "debug": "^4.1.1",
        "howler": "^2.1.3",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-redux": "^7.2.0",
        "redux": "^4.0.5",
        "redux-thunk": "^2.3.0",
        "request": "^2.88.0",
        "request-promise": "^4.2.5"
    },
    "devDependencies": {
        "@types/better-sqlite3": "^5.2.1",
        "@types/cheerio": "^0.22.18",
        "@types/crypto-js": "^3.1.45",
        "@types/debug": "^4.1.5",
        "@types/howler": "^2.1.2",
        "@types/mocha": "^7.0.2",
        "@types/react": "^16.9.34",
        "@types/react-dom": "^16.9.7",
        "@types/react-redux": "^7.1.7",
        "@types/request": "^2.48.4",
        "@types/request-promise": "^4.1.46",
        "@types/tough-cookie": "^2.3.6",
        "electron": "^8.2.5",
        "electron-builder": "^22.6.0",
        "electron-rebuild": "^1.10.1",
        "gulp": "^4.0.0",
        "gulp-clean": "^0.4.0",
        "gulp-filter": "^6.0.0",
        "gulp-typescript": "^6.0.0-alpha.1",
        "mocha": "^7.1.2",
        "requirejs": "^2.3.6",
        "rimraf": "^3.0.1",
        "tslint": "^6.1.2",
        "typescript": "^3.8.3"
    }
}
